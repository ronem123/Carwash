<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="head_title" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="edit_text_style" parent="android:Widget.EditText">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/color_sign_up</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:drawableTint">@color/color_login</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
    </style>

    <style name="event_button" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="event_button.CreateAccount">
        <item name="android:background">@drawable/login_selector</item>
        <item name="android:text">@string/join</item>
    </style>

    <style name="event_button.Login">
        <item name="android:background">@drawable/sign_up_selector</item>
        <item name="android:text">@string/btn_login</item>
    </style>

    <style name="event_button.HaveAccount">
        <item name="android:background">@drawable/border_selector</item>
        <item name="android:text">@string/already_member</item>
    </style>

    <style name="event_button.NewMember">
        <item name="android:background">@drawable/border_selector</item>
        <item name="android:text">@string/new_member</item>
    </style>


    <style name="nav_info_text" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_title_text" parent="nav_info_text">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="show_more_user" parent="dialog_title_text">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!--animation-->
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="slideAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
    </style>


    <style name="checkbox_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_check_box_outline_blank_black_24dp</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="payment_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:tint">@color/color_grey</item>
    </style>

    <style name="payment_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
</resources>
